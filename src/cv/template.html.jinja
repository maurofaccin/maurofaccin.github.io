
<details>
    <summary>Index</summary>
    <ul>
    {% for class in Content %}{% for title, content in class.items() %}
    <li><a href="#{{ title | lower | urlencode }}">{{ title }}</a></li>
    {% endfor %}{% endfor %}
    {% for class in Tables %}{% for title,content in class.items()%}
    <li><a href="#{{ title | lower | urlencode }}">{{ title }}</a></li>
    {% endfor %}{% endfor %}
    </ul>
</details>

{% for class in Content %}{% for title, content in class.items() %}

<h1 id={{ title | lower | urlencode }}>{{ title }}</h1>

<div class='cv_block'>
<dl class='cv_text'>
    {% for item in content %}
    <dt>{{ item.period }}</dt>
    <dd><strong>
        {% if item.url %} <a class="outlink" href="{{item.url}}">{{item.title}}</a>{% else %}{{item.title}}{% endif %}
    </strong> <div class='right'>{{ item.location }}</div></dd>
    <dd><small>{{ item.subtitle }}</small></dd>
    <dd><small>{{ item.long }}</small></dd>

    {% if item.topics %}
    <ul>
        {% for i in item.topics %}
        <li>{{ i }}</li>
        {% endfor %}
    </ul>
    {% endif %}
    {% if item.extra %}<div class="awards">{{ item.extra }}</div>{% endif %}
    {% endfor %}
</dl>
</div>
{% endfor %}{% endfor %}


{% for class in Tables %}{% for title,content in class.items()%}

<h1 id={{ title | lower | urlencode }}>{{ title }}</h1>

<div class='cv_block'>
<dl class='cv_text'>
    {% for key, thelist in content.items() %}
    <dt><strong>{{ key }}:</strong></dt>
    <dd>{{ thelist|join(', ') }}</dd>
    {% endfor %}
</dl>
</div>
{% endfor %}{% endfor %}
